#row{
  padding: 10px;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-direction: row;
  flex-grow: 1;
  width: 90%;
}

.label{
  display: inline;
  font-size: 0.8em;
  font-weight:bold;
}

input{
  display: inline;
  color: #eccca3;
  font-weight: bolder;
  text-shadow: 0 0 0.2em black;
  background-color: rgba(255,255,255,0.5);
  text-align: center;
  margin: 10px;
  flex-grow: 2;
}

#itemsBox{
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
  flex-direction: column;
  flex-grow: 1;
  width: 100%;
}

#items{
  flex-grow: 1;
  height: 100px;
  background-color: rgba(255,255,255,0.5);
  margin: 10px 0px;
  font-size: 1.2em;
  color:#eccca3;
  text-shadow: 0 0 0.2em black;
  font-weight: bolder;
  padding: 10px 0 0 10px;
}

 .result{
   margin: 20px;
  color: #eccca3;
  text-shadow: 0 0 0.2em black;
   font-size: large;
   font-weight: bolder;
 }

 .results{
   display: inline;
   margin: 0px 20px;
  color: #eccca3;
  text-shadow: 0 0 0.2em black;
   font-size: large;
   font-weight: bold;
   word-wrap: break-word;
   word-break: break-all;
 }

 #choose{
   background-color: rgba(200,40,35,0.7);
   color: white;
   font-size: medium;
   border-radius: 0;
 }

 #col{
  padding: 10px;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-direction: column;
  flex-grow: 1;
  width: 90%;
 }

 .picker{
   border-radius: 15px;
   position: relative;
   z-index: 2;
   padding: 0 10px;
   color: #eccca3;
   font-weight: bolder;
   text-shadow: 0 0 0.2em black;
   font-size: medium;
 }

 .section_title{
   font-size: 1em;
   font-weight:bold;
 }

 #submit{
   background-color: rgba(200,40,35,0.7);
   border-radius: 0;
   position: relative;
   z-index: 2;
 }

