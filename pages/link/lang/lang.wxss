/* pages/link/lang/lang.wxss */

/* 引入fontAwesome */
@import './fontAwesome.wxss';

#box{
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  background-color: #EEEEEF;
  font-family: 'STZhongsong';
  z-index: -1;
}

#book {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  font-size: 1.5em;
  z-index: 2;
  width: 100%;
  background-color: #EEEEEF;
}

#wordBox {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  font-size: 2.5em;
  width: 100%;
  z-index: 2;
}

#wordBoxBack {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 1;
}

#word {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  color: #ff7b00;
  background-color: white;
  box-shadow: 5px 5px rgb(83, 83, 83);
  border-radius: 0.2em;
  height: 40%;
  padding: 0 1em;
}

#itemBox {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  background-color:#EEEEEF;
  width: 100%;
  height: 100%;
  padding: 10% 0 5% 0;
}

.item {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  width: 85%;
  /* height: 25%; */
  word-break:break-all;
  text-align: justify;
}

.itemTag {
  font-weight: bold;
  padding-right: 1em;
  align-self: flex-start;
}